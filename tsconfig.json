{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~/components/*": ["components/*"],
      "~/compounds/*": ["compounds/*"],
      "~/sections/*": ["sections/*"],
      "~/templates/*": ["templates/*"],
      "~/images/icons/*": ["images/icons/*"],
      "~/images/*": ["images/*"],
      "~/config": ["config"],
      "~/secret": ["secret"],
      "~/modules/*": ["modules/*"],
      "~/hooks/*": ["hooks/*"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.js"],
  "exclude": [
    "node_modules"
  ]
}
